[user]
	email = brisvag@gmail.com
	name = Lorenzo Gaifas
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	excludesfile = /home/lorenzo/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -R
[diff]
	submodule = log
[push]
	followTags = true
[pull]
	rebase = false
[merge]
	tool = nvimdiff2
[interactive]
	diffFilter = diff-so-fancy --patch
